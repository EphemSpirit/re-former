<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>
  <p>
    <%= f.label :username, "Username:" %><br>
    <%= f.text_field  :username %>
  </p>
  <p>
    <%= f.label :email, "Email:" %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password:" %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
